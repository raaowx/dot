# C
cleanup-history() {
  case "${INTERPRETER}" in
  "bash")
    echo -n > "$HOME/.bash_history"
    history -c
    ;;
  "zsh")
    echo -n > "$HOME/.zsh_history"
    ;;
  esac
}
# D
dos2nix() {
  FILE=$(basename "$1")
  NAME="${FILE%.*}"
  tr -d '\r' < "$1" > "$NAME.nix.txt"
}
