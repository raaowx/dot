kill-procs-on-volume() {
  local vol_path="$1"
  local user_name
  user_name="$(whoami)"

  if [[ -z "$vol_path" ]]; then
    echo -e "\n$RB [ERROR] Usage:$MB kill_procs_on_volume /path/to/volume$RESET\n"
    return 1
  fi

  if [[ ! -d "$vol_path" ]]; then
    echo -e "\n$RB [ERROR] Path not found:$MB \"$vol_path\"$RESET\n"
    return 1
  fi

  local vol_label
  vol_label="$(basename "$vol_path")"

  local -a proc_names
  local -a pids
  proc_names=()
  pids=()

  sudo -v || { echo -e "\n$RB [ERROR] Authentication failed$RESET\n"; return 1; }

  while IFS=$'\t' read -r proc pid; do
    [[ -n "$proc" && "$pid" =~ ^[0-9]+$ ]] || continue
    proc_names+=("$proc")
    pids+=("$pid")
  done < <(
    sudo -n lsof "$vol_path" \
      | awk -v user="$user_name" 'NR>1 && $3==user {print $1 "\t" $2}' \
      | sort -u
  )

  echo -e "$WB ··> User:$YB $user_name$RESET"
  echo -e "$WB ··> Volume:$YB $vol_label$RESET"
  echo -e "$WB ··> Volume path:$YB $vol_path$RESET"

  if (( ${#pids[@]} == 0 )); then
    echo -e "$WB ··> Active processes:$RB none$RESET"
    echo
    return 0
  fi

  echo -e "$WB ··> Active processes:$RESET"
  for proc in "${proc_names[@]}"; do
    echo -e "  $WB -$RESET $proc"
  done
  echo

  echo -e "$WB ··>$YB $vol_label$WB has been analyzed. The following processes are still active. Do you want to terminate them gracefully? [y/n]$RESET"
  printf "  > "
  read -r answer

  if [[ "$answer" == "y" ]]; then
    local killed_any=0
    local pid
    for pid in "${pids[@]}"; do
      if kill "$pid" 2>/dev/null; then
        killed_any=1
      fi
    done

    if [[ "$killed_any" -eq 1 ]]; then
      echo -e "$WB ··>$MB SIGTERM$WB sent to the listed processes.$RESET"
    else
      echo -e "$RB [ERROR] No processes could be terminated (permission denied or already gone).$RESET"
    fi
    echo
  else
    echo -e "$WB ··> No processes were terminated.$RESET"
    echo
  fi
}
